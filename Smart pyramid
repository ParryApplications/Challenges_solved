package practice;

import java.util.*;

public class rough
{
	
	
	public static void main(String argsp[]) 
	{
		Scanner obj = new Scanner(System.in);
		
		int a = obj.nextInt();
		int r=1;
		
		for(int j=a;j>0;--j)
		
		{
		for(int i=1;i<=j;++i) 
		{
			
			System.out.print(" ");
		
		}
		for(int i=1;i<=r;i++) 
		{
			System.out.print("* ");
		}
		System.out.println();
		r++;
		}
		
	}
}
